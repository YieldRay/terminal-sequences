{
    "name": "@yieldray/terminal-sequences",
    "version": "0.2.0",
    "exports": "./mod.ts",
    "publish": {
        "include": [
            "LICENSE",
            "README.md",
            "**/*.ts",
            "deno.json"
        ],
        "exclude": [
            ".github",
            "**/*.test.ts"
        ]
    },
    "compilerOptions": {
        "strict": true,
        "useUnknownInCatchVariables": true,
        "noImplicitOverride": true
    },
    "tasks": {
        "lint": "deno lint",
        "fmt": "deno fmt",
        "docs": "rm -rf ./docs && deno doc --html --name=terminal-sequences --output=./docs/ **/*.ts"
    },
    "fmt": {
        "lineWidth": 80,
        "indentWidth": 4,
        "proseWrap": "preserve",
        "include": [
            "src",
            ".github",
            "deno.json",
            "README.md",
            "*.ts"
        ]
    },
    "exclude": [
        ".git",
        "docs",
        "coverage",
        "dist"
    ]
}
